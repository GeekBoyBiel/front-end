    <style>
        .avatar-upload {
            position: relative;
            max-width: 205px;
            margin: 30px auto;
            .avatar-edit {
                position: absolute;
                right: -10px;
                z-index: 1;
                top: -10px;
                background-color: var(--bs-primary);
                border-radius: 100%;
                input {
                    display: none;
                    + label {
                        display: inline-block;
                        width: 34px;
                        height: 34px;
                        margin-bottom: 0;
                        border-radius: 100%;
                        cursor: pointer;
                        font-weight: normal;
                        transition: all .2s ease-in-out;
                        &:hover {
                            border-color: #d6d6d6;
                        }
                    }
                }
            }
            .avatar-preview {
                width: 192px;
                height: 192px;
                position: relative;
                border-radius: 100%;
                box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);
                > div {
                    width: 100%;
                    height: 100%;
                    border-radius: 100%;
                    background-size: cover;
                    background-repeat: no-repeat;
                    background-position: center;
                }
            }
        }
        .preview-container {
            display: flex;
            overflow-x: auto;
            max-width: 100%;
            padding: 10px 0;
        }
        .preview-item {
            position: relative;
            display: inline-block;
            margin-right: 10px;
        }
        .preview-item img {
            max-width: 100px;
        }
        .remove-btn {
            position: absolute;
            top: 0;
            right: 0;
            background-color: rgba(255, 0, 0, 0.7);
            border: none;
            color: white;
            cursor: pointer;
            padding: 5px;
        }
    </style>
